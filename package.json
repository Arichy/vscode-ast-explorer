{
  "name": "vscode-ast-explorer",
  "displayName": "vscode-ast-explorer",
  "description": "Ast explorer as vscode extension.",
  "author": "Arichy",
  "version": "1.2.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "resources/logo.png",
  "publisher": "arichy",
  "main": "./dist/extension.js",
  "repository": {
    "url": "https://github.com/Arichy/vscode-ast-explorer.git"
  },
  "contributes": {
    "configuration": {
      "title": "vscode-ast-explorer",
      "properties": {
        "ast.highlightConfig": {
          "type": "object",
          "properties": {
            "backgroundColor": {
              "type": "string"
            },
            "borderRadius": {
              "type": "string"
            }
          }
        },
        "ast.reuseWebview": {
          "type": "boolean",
          "default": false,
          "description": "Enable singleton mode (recommended, only one webview)"
        },
        "ast.hideEditorTitleButton": {
          "type": "boolean",
          "default": false,
          "description": "Whether to hide the show-ast button in editor title"
        }
      }
    },
    "commands": [
      {
        "command": "vscode-ast-explorer.show",
        "title": "show ast",
        "icon": {
          "dark": "./resources/icon-dark.png",
          "light": "./resources/icon-light.png"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "vscode-ast-explorer.show",
          "when": "editorLangId in ast.supportedLanguageIds && !ast.hideEditorTitleButton",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn build",
    "build": "yarn build:web && yarn build:extension",
    "build:extension": "rm -rf dist && cross-env NODE_ENV=production webpack --mode production",
    "build:web": "cd astexplorer/website && yarn build",
    "release": "standard-version",
    "watch": "tsc -watch -p ./",
    "build-ts": "tsc -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "watch:web": "cd astexplorer/website && yarn watch",
    "webpack-dev": "cross-env NODE_ENV=development webpack --mode development --watch",
    "updateDeps": "node scripts/updateWebDependencies.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/lodash-es": "^4.17.5",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/qs": "^6.9.7",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "axios": "^0.27.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "standard-version": "^9.3.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.3",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "color-name": "^1.1.4",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "qs": "^6.10.1"
  }
}
